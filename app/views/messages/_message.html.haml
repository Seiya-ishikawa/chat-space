.messages{data: {message_id:"#{message.id}"}}
 .messages__user-name
  .messages__user-name--name
   = message.user.name
  .messages__user-name--time
   = message.created_at.strftime("%Y/%m/%d %H:%M")
 .messages__message
  - if message.content.present?
   %p.messages__message--content
    = message.content
  - if message.image.present?
   = image_tag message.image.url, class: 'messages__message--image' 